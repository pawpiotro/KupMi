<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/request_form_tags_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="#D2D2D2"
            android:padding="5dp"
            android:text="@string/tags_label_name"
            android:textAlignment="viewStart"
            android:textSize="24sp" />

        <Spinner
            android:id="@+id/request_form_tag_selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="2dp"
            android:paddingTop="5dp"
            android:paddingEnd="2dp"
            android:paddingBottom="5dp">

        </Spinner>

        <TextView
            android:id="@+id/request_form_title_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#D2D2D2"
            android:padding="5dp"
            android:text="@string/title_label_name"
            android:textAlignment="viewStart"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/request_form_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:gravity="top"
            android:hint="@string/title_hint"
            android:inputType="text"
            android:padding="1dp"
            android:paddingStart="2dp"
            android:paddingLeft="2dp"
            android:paddingTop="5dp"
            android:paddingEnd="2dp"
            android:paddingRight="2dp"
            android:paddingBottom="5dp"
            android:textSize="20sp"
            android:maxLength="25"
            android:background="@android:color/transparent"
            />

        <TextView
            android:id="@+id/request_form_desc_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#D2D2D2"
            android:padding="5dp"
            android:text="@string/description_label_name"
            android:textAlignment="viewStart"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/request_form_desc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:gravity="top"
            android:hint="@string/description_hint"
            android:inputType="textMultiLine"
            android:padding="1dp"
            android:paddingStart="2dp"
            android:paddingLeft="2dp"
            android:paddingTop="5dp"
            android:paddingEnd="2dp"
            android:paddingRight="2dp"
            android:paddingBottom="5dp"
            android:singleLine="false"
            android:background="@android:color/transparent" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/request_search_inputs_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageButton
            android:id="@+id/request_form_desc_next_button"
            style="@android:style/Widget.DeviceDefault.Light.ImageButton"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="8dp"
            android:clickable="true"
            android:elevation="5dp"
            android:scaleType="fitXY"
            android:src="@android:drawable/ic_menu_send" />

    </FrameLayout>

</FrameLayout>
