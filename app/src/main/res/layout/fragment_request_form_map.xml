<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/request_form_map"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.requestForm.RequestFormMap">

    <com.google.android.gms.maps.MapView
        android:id="@+id/request_form_map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:background="#F0F0F0"
        android:padding="2dp">

        <TextView
            android:id="@+id/request_form_map_coords_textview"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:background="@drawable/border"
            android:padding="4dp"
            android:textAlignment="center"
            android:textSize="18sp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/request_search_inputs_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageButton
            android:id="@+id/request_form_map_next_button"
            style="@android:style/Widget.DeviceDefault.Light.ImageButton"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="8dp"
            android:clickable="true"
            android:elevation="5dp"
            android:focusable="true"
            android:scaleType="fitXY"
            android:src="@android:drawable/ic_menu_send" />

    </FrameLayout>

</RelativeLayout>